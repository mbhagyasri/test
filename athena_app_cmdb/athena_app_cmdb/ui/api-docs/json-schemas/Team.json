{
  "description": "Engineering team.  May develop many products and applications",
  "type": "object",
  "properties": {
    "id": {
      "description": "Id of the team",
      "pattern": "^team-[a-z0-9-]{0,61}[a-z0-9]$",
      "minLength": 5,
      "id": "#team",
      "type": "string"
    },
    "email": {
      "description": "Team email used for information communications and approvals",
      "items": {
        "type": "string",
        "format": "email"
      },
      "type": "array"
    },
    "ad-group": {
      "description": "Team active directory groups",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "members": {
      "description": "Members of the team to give role-based access",
      "type": "object",
      "properties": {
        "admin": {
          "type": "array",
          "items": [
            {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string"
                },
                "username": {
                  "type": "string"
                }
              },
              "additionalProperties": false,
              "required": [
                "email",
                "username"
              ]
            }
          ],
          "minItems": 1,
          "additionalItems": {
            "anyOf": [
              {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "username": {
                    "type": "string"
                  }
                },
                "additionalProperties": false,
                "required": [
                  "email",
                  "username"
                ]
              }
            ]
          }
        },
        "developer": {
          "type": "array",
          "items": [
            {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string"
                },
                "username": {
                  "type": "string"
                }
              },
              "additionalProperties": false,
              "required": [
                "email",
                "username"
              ]
            }
          ],
          "minItems": 1,
          "additionalItems": {
            "anyOf": [
              {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "username": {
                    "type": "string"
                  }
                },
                "additionalProperties": false,
                "required": [
                  "email",
                  "username"
                ]
              }
            ]
          }
        }
      },
      "additionalProperties": false
    },
    "opsgenie": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "manager": {
          "type": "string"
        },
        "create": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "required": [
        "create",
        "manager",
        "name"
      ]
    },
    "notification": {
      "description": "Notification settings",
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "email": {
                "description": "Email",
                "format": "email",
                "type": "string"
              }
            },
            "additionalProperties": false,
            "required": [
              "email"
            ]
          },
          {
            "type": "object",
            "properties": {
              "slack": {
                "type": "string"
              }
            },
            "additionalProperties": false,
            "required": [
              "slack"
            ]
          }
        ]
      }
    },
    "name": {
      "description": "Name of the entity",
      "pattern": "^[a-z0-9][a-z0-9-]{0,61}[a-z0-9]$",
      "minLength": 3,
      "type": "string"
    },
    "description": {
      "description": "Description of the entity",
      "type": "string"
    }
  },
  "additionalProperties": true,
  "required": [
    "ad-group",
    "email",
    "id",
    "name",
    "notification"
  ],
  "$schema": "http://json-schema.org/draft-07/schema#"
}